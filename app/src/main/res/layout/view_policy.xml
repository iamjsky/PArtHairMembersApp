<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_policy"
    android:background="@color/ph_page_bg_color"
    android:clickable="true">

    <LinearLayout
        android:padding="@dimen/_20sdp"
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_policyBack"


                    android:adjustViewBounds="true"
                    android:src="@drawable/ico_back_02"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"/>
                <TextView
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>

            <View
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_elevation_01" />

        </LinearLayout>






        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="피아트헤어"
            android:textSize="@dimen/_30sdp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="이용약관"
            android:textSize="@dimen/_30sdp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_top"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_20sdp">

    <androidx.core.widget.NestedScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    <TextView
        android:id="@+id/tv_policy"
        android:text=""
        android:gravity="left|top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </androidx.core.widget.NestedScrollView>
        <Button
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/btn_policyAgree"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="이용약관에 동의 합니다." />
    </LinearLayout>






</RelativeLayout>