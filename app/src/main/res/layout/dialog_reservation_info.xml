<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_page_bg_color">


    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="@dimen/_40sdp"
            android:paddingBottom="@dimen/_130sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ph_page_bg_color"
            android:orientation="vertical"
         >

            <LinearLayout
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_rounded_01"
                android:elevation="@dimen/_10sdp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/ph_gray_color_02"
                android:outlineSpotShadowColor="@color/ph_gray_color_02"
                android:padding="@dimen/_20sdp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="날짜 선택" />

                <com.prolificinteractive.materialcalendarview.MaterialCalendarView

                    android:id="@+id/view_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mcv_calendarMode="week"
                    app:mcv_dateTextAppearance="@dimen/_11sdp"
                    app:mcv_firstDayOfWeek="monday"
                    app:mcv_headerTextAppearance="@dimen/_11sdp"
                    app:mcv_monthLabels="@dimen/_11sdp"
                    app:mcv_selectionColor="@color/ph_light_gray_color_01"
                    app:mcv_selectionMode="single"
                    app:mcv_showOtherDates="all" />
            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_rounded_01"
                android:elevation="@dimen/_10sdp"
                android:orientation="vertical"
                android:outlineAmbientShadowColor="@color/ph_gray_color_02"
                android:outlineSpotShadowColor="@color/ph_gray_color_02"
                android:padding="@dimen/_20sdp">

                <TextView

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:text="시간 선택" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1000"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="10:00"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1030"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="10:30"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1100"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="11:00"
                        android:textColor="@color/ph_light_gray_color_01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1130"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="11:30"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1200"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="12:00"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1230"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="12:30"
                        android:textColor="@color/ph_light_gray_color_01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_1300"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="13:00"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1330"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="13:30"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1400"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="14:00"
                        android:textColor="@color/ph_light_gray_color_01" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/btn_1430"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="14:30"
                        android:textColor="@color/ph_light_gray_color_01" />
                    <Button
                        android:id="@+id/btn_1500"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="15:00"
                        android:textColor="@color/ph_light_gray_color_01" />
                    <Button
                        android:id="@+id/btn_1530"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="15:30"
                        android:textColor="@color/ph_light_gray_color_01" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">


                    <Button
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/btn_1600"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="16:00"
                        android:textColor="@color/ph_light_gray_color_01" />
                    <Button
                        android:id="@+id/btn_1630"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="16:30"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1700"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="17:00"
                        android:textColor="@color/ph_light_gray_color_01" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
                    <Button
                        android:layout_marginRight="@dimen/_10sdp"
                        android:id="@+id/btn_1730"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="17:30"
                        android:textColor="@color/ph_light_gray_color_01" />
                    <Button
                        android:id="@+id/btn_1800"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="18:00"
                        android:textColor="@color/ph_light_gray_color_01" />

                    <Button
                        android:id="@+id/btn_1830"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_button_rounded_02"
                        android:gravity="center"
                        android:text="18:30"
                        android:textColor="@color/ph_light_gray_color_01" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">
              <Button
                  android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/btn_1900"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_button_rounded_02"
                    android:gravity="center"
                    android:text="19:00"
                    android:textColor="@color/ph_light_gray_color_01" />
                    <View
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"/>
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_34sdp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_TopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ph_menu_tab_color_01"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_back_02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="헤어스타일, 시술 선택" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="@color/ph_menu_tab_color_01"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"


            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:text="예약 날짜" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <LinearLayout
                android:id="@+id/layout_selectItemGroup"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp">


            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">


            <Button

                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="완료" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>