<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_kakao_signup_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kakao"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"

                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ico_back_02" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_elevation_01"
                android:visibility="invisible" />

        </LinearLayout>


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_bold"
            android:text="피아트헤어"
            android:textSize="@dimen/_30sdp" />


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="카카오 간편 로그인"
            android:textSize="@dimen/_30sdp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"

            android:text="휴대폰 번호로 가입한 아이디를\n카카오 계정으로 로그인 할 수 있습니다."
            android:textColor="@color/ph_gray_color_02" />

        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center|top"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_userPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="가입한 휴대폰 번호" />

                <EditText
                    android:id="@+id/edtxt_userPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_edit_text_01"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:inputType="number"
                    android:padding="@dimen/_14sdp"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="비밀번호" />

                <EditText

                    android:letterSpacing="0.5"
                    android:id="@+id/edtxt_userPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_edit_text_01"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:padding="@dimen/_14sdp"
                    android:textSize="@dimen/_14sdp" />
            </LinearLayout>


        </LinearLayout>


        <Button

            android:id="@+id/btn_kakaoLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:text="카카오 계정으로 로그인" />


    </LinearLayout>


</RelativeLayout>