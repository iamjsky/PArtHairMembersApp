<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_01"
    android:padding="@dimen/_20sdp">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="예약 정보 확인"
            android:layout_marginBottom="@dimen/_20sdp"
            android:textColor="@color/ph_main_color"
            android:fontFamily="@font/pretendard_bold"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="예약자 이름"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationName"
                android:gravity="center|right"
                android:text="피아트"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="연락처"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationPhone"
                android:gravity="center|right"
                android:text="010-9102-0836"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="날짜"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationDate"
                android:gravity="center|right"
                android:text="2021-11-23 (화)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="시간"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationTime"
                android:gravity="center|right"
                android:text="13:00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="@dimen/_6sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="스타일"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationStyle"
                android:gravity="center|right"
                android:text="남성 컷"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="디자이너"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationDesigner"
                android:gravity="center|right"
                android:text="소연 원장"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginRight="@dimen/_4sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_user_04"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:gravity="center"
                android:fontFamily="@font/pretendard_bold"
                android:text="메모"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_userReservationMemo"
                android:gravity="center|right"
                android:text="ㅁㅁㅁㄴㄴㅇ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:textColor="@color/ph_main_color"
                android:background="@drawable/selector_button_rounded_02"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:id="@+id/btn_cancel"
                android:text="취소"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"/>
            <Button
                android:layout_weight="1"
                android:id="@+id/btn_confirm"
                android:text="예약하기"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>