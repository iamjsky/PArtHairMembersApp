<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_page_bg_color">



    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recv_designerList"
        android:clipToPadding="false"
        android:paddingTop="@dimen/_40sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/layout_designer_01"
        android:outlineAmbientShadowColor="@color/ph_gray_color_02"
        android:outlineSpotShadowColor="@color/ph_gray_color_02"
        android:elevation="@dimen/_4sdp"
        android:background="@drawable/bg_rounded_01"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginBottom="@dimen/_20sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@color/ph_main_color"
                android:adjustViewBounds="true"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"/>

            <TextView

                android:gravity="top|left"
                android:id="@+id/tv_designer_01"
                android:text="소연 원장"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_designer_01"
            android:text="선택"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/layout_TopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ph_menu_tab_color_01"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_back_02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="디자이너 선택 (TEST)" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

    </LinearLayout>
</RelativeLayout>