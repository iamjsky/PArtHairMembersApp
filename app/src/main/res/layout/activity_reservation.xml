<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_kakao_signup_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_page_bg_color"
    android:clickable="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_back"

                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_back_02" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:text="" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/line_elevation_01"
                        android:visibility="invisible" />

                </LinearLayout>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="피아트헤어"
                    android:textSize="@dimen/_30sdp" />


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="예약하기"
                    android:textSize="@dimen/_30sdp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:text="예약을 원하는 날짜와 시간, 스타일을 선택해 주세요."
                    android:textColor="@color/ph_gray_color_02" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_70sdp">


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/ph_light_gray_color_06"
                        android:id="@+id/tv_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="예약 날짜"
                    />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingRight="@dimen/_14sdp"
                            android:text=""
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:id="@+id/tv_dateInput"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/bg_rounded_04"
                            android:gravity="center"
                            />

                        <Button
                            android:enabled="true"
                            android:background="@drawable/selector_button_rounded_01"
                            android:id="@+id/btn_dateSelect"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:text="선택" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_designer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="담당 디자이너"
                        android:textColor="@color/ph_light_gray_color_06" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingRight="@dimen/_14sdp"
                            android:text=""
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:id="@+id/tv_designerInput"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/bg_rounded_04"
                            android:gravity="center"
                     />

                        <Button
                            android:enabled="false"
                            android:background="@drawable/selector_button_rounded_01"
                            android:id="@+id/btn_designerSelect"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:text="선택" />

                    </LinearLayout>


                </LinearLayout>
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView

                        android:id="@+id/tv_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="헤어스타일, 시술"
                        android:textColor="@color/ph_light_gray_color_06" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingLeft="@dimen/_14sdp"
                            android:paddingRight="@dimen/_14sdp"
                            android:ems="8"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text=""
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:id="@+id/tv_styleInput"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:background="@drawable/bg_rounded_04"
                            android:gravity="center"
                      />

                        <Button
                            android:enabled="false"
                            android:background="@drawable/selector_button_rounded_01"
                            android:id="@+id/btn_styleSelect"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:text="선택" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>