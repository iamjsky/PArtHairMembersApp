<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/ph_page_bg_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ph_page_bg_color_02">

        <LinearLayout
            android:paddingBottom="@dimen/_40sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ph_page_bg_color_02"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp">


                    <include layout="@layout/view_main_notice_image_slider" />


                    <LinearLayout
                        android:id="@+id/layout_topMainMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="@dimen/_16sdp">

                        <ImageView
                            android:padding="@dimen/_4sdp"
                            android:background="@drawable/bg_rounded_hamburger_01"
                            android:id="@+id/iv_openDrawer"
                            android:layout_width="@dimen/_28sdp"
                            android:layout_height="@dimen/_28sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_hamburger_04" />

                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_userLogged"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/ph_page_bg_color"

                android:orientation="vertical"
                android:padding="@dimen/_20sdp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_userInfo_userName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_bold"
                                android:text="주하늘"
                                android:textColor="@color/paypal_blue"
                                android:textSize="@dimen/_20sdp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_4sdp"
                                android:text="고객님"
                                android:textSize="@dimen/_20sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가입날짜"
                              />

                                <TextView

                                    android:id="@+id/tv_userInfo_userCreatedDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:text="2021-10-07"
                                  />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_4sdp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="최근방문"
                                   />

                                <TextView
                                    android:id="@+id/tv_userInfo_userLastVisitDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/_4sdp"
                                    android:text="2021-10-07"
                                  />


                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:id="@+id/iv_userInfo_userProfileImg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_callVisitCheck"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_call_01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:text="안심콜"
                          />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="전화하기"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_naverReservation"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_reservation_02" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:text="네이버 예약"
                          />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="바로가기"
                    />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_userPoints"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_points_01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:text="포인트"
                          />

                        <TextView
                            android:id="@+id/tv_userInfo_userPoints"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="100000"
                           />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_userCoupons"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_coupons_01" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:text="쿠폰"
                     />

                        <TextView
                            android:id="@+id/tv_userInfo_userCoupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="1"
                           />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_userNotLogged"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/ph_page_bg_color"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="로그인"
                        android:textColor="@color/paypal_blue"
                        android:textSize="@dimen/_20sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="을 해주세요"
                        android:textSize="@dimen/_20sdp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:text="로그인 후 고객님의 혜택을 확인할 수 있습니다."
                 />

                <LinearLayout
                    android:id="@+id/layout_goLogin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_rounded_02"
                    android:gravity="center|left"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_16sdp">

                    <ImageView

                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ico_user_03" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_weight="1"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="로그인 바로가기"
                        android:textSize="@dimen/_16sdp" />

                    <ImageView

                        android:layout_width="26dp"
                        android:layout_height="@dimen/_20sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ico_more_01" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:padding="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/ph_page_bg_color"
                android:orientation="horizontal"
              >

                <LinearLayout
                    android:id="@+id/layout_noticeMore"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginRight="@dimen/_12sdp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/ph_gray_color_01"
                        android:text="알림"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/ph_gray_color_01"
                        android:text="9월 27일, 28일 백신접종으로 인한 휴무입니다!! 쉽니다!! 알겠습니까? 나도 쉴꺼에요"
                        android:gravity="center|left"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:padding="@dimen/_4sdp"

                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ico_more_02" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ph_page_bg_color"
                android:orientation="vertical"
               >


                <LinearLayout

                    android:padding="@dimen/_20sdp"

                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="새소식"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:id="@+id/layout_newsMore"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ph_gray_color_02"
                            android:gravity="center"
                            android:text="더보기"
                            />
                        <ImageView

                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_more_02" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingLeft="@dimen/_20sdp"

                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_news_coupons"
                        android:focusable="true"

                        android:paddingRight="@dimen/_14sdp"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:textColor="@color/ph_main_color"
                        android:background="@drawable/selector_main_tab_01"
                        android:text="쿠폰"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btn_news_events"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:focusable="true"
                        android:paddingRight="@dimen/_14sdp"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:minHeight="0dp"
                        android:minWidth="0dp"
                        android:textColor="@color/ph_main_color"
                        android:background="@drawable/selector_main_tab_01"
                        android:text="이벤트"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button

                        android:id="@+id/btn_news_notice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selector_main_tab_01"
                        android:focusable="true"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingLeft="@dimen/_14sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingRight="@dimen/_14sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="공지사항"
                        android:textColor="@color/ph_main_color"
                        android:textStyle="bold" />



                </LinearLayout>

                <FrameLayout
                    android:id="@+id/layout_news"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"/>


            </LinearLayout>

            <LinearLayout

                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/ph_page_bg_color"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="헤어스타일, 시술"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:id="@+id/layout_hairStyleMore"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ph_gray_color_02"
                            android:gravity="center"
                            android:text="더보기"
                            />
                        <ImageView

                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_more_02" />

                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300sdp">
                    <androidx.recyclerview.widget.RecyclerView

                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:clipToPadding="false"
                        android:id="@+id/recv_hairStyle"
                        tools:listitem="@layout/item_main_hair_style"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <LinearLayout
                        android:id="@+id/layout_mainHairStyleEmpty"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center"
                            android:text="데이터가 없습니다."
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </LinearLayout>

                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginBottom="@dimen/_10sdp"
                android:background="@color/ph_page_bg_color"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="@dimen/_20sdp"
                    android:gravity="center|bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView

                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="포인트 샵"
                        android:textSize="@dimen/_20sdp" />

                    <LinearLayout
                        android:id="@+id/layout_pointShopMore"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ph_gray_color_02"
                            android:gravity="center"
                            android:text="더보기"
                            />
                        <ImageView

                            android:paddingLeft="@dimen/_4sdp"
                            android:paddingBottom="@dimen/_4sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ico_more_02" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:fitsSystemWindows="true"
        android:id="@+id/layout_topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ph_menu_tab_color_01"
        android:clickable="true"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_topMenuOpenDrawer"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/ico_hamburger_03" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="피아트헤어" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

    </LinearLayout>

    <include layout="@layout/view_main_drawer"></include>


</RelativeLayout>