<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_page_bg_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ph_page_bg_color_02">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ph_page_bg_color_02"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp">


                    <include layout="@layout/view_main_notice_image_slider"/>


                    <LinearLayout
                        android:id="@+id/layout_topMainMenu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|left"
                        android:orientation="horizontal"
                        android:padding="@dimen/_20sdp">

                        <ImageView

                            android:id="@+id/iv_openDrawer"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/ico_hamburger_02" />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ph_main_color"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_userInfo_userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="주하늘"
                            android:textSize="@dimen/_16sdp" />

                        <TextView
                            android:textColor="@color/white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:text="고객님"
                            android:textSize="@dimen/_16sdp" />
                    </LinearLayout>

                    <TextView
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:text="피아트헤어를 이용해 주셔서 감사합니다."
                        android:textSize="@dimen/_16sdp" />


                </LinearLayout>


            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/bg_main_page_rounded_01"
                android:elevation="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_600sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="타이틀1"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:background="@color/ph_page_bg_color_02" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_600sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_20sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center|left"
                        android:text="타이틀2"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:id="@+id/layout_topMenu"
        android:layout_width="match_parent"

        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true"
        android:background="@color/ph_menu_tab_color_01"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_topMenuOpenDrawer"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:background="@drawable/ico_hamburger_02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="피아트헤어 고객 추가정보 입력" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

    </LinearLayout>

    <include layout="@layout/view_main_drawer"></include>


</RelativeLayout>