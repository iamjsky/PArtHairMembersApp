<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ph_page_bg_color">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_scrollView"
        android:background="@color/ph_page_bg_color_02"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:padding="@dimen/_20sdp"
                android:background="@color/ph_page_bg_color_02"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp">
                <ImageView

                    android:background="@drawable/ico_hamburger_02"
                    android:adjustViewBounds="true"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/iv_openDrawer" />

            </LinearLayout>


              <LinearLayout
                  android:elevation="@dimen/_10sdp"

                  android:background="@drawable/bg_main_page_rounded_01"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout

                      android:padding="@dimen/_20sdp"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_600sdp">
                      <TextView
                          android:fontFamily="@font/pretendard_bold"
                          android:gravity="center|left"
                          android:text="타이틀1"
                          android:textSize="@dimen/_20sdp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                  </LinearLayout>

                  <View
                      android:background="@color/ph_page_bg_color_02"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_10sdp"/>
                  <LinearLayout
                      android:padding="@dimen/_20sdp"
                      android:orientation="vertical"
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_600sdp">

                      <TextView
                          android:fontFamily="@font/pretendard_bold"
                          android:gravity="center|left"
                          android:text="타이틀2"
                          android:textSize="@dimen/_20sdp"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"/>

                  </LinearLayout>
              </LinearLayout>






        </LinearLayout>



    </androidx.core.widget.NestedScrollView>




    <LinearLayout
        android:clickable="true"
        android:background="@color/ph_menu_tab_color_01"

        android:id="@+id/layout_topMenu"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/_20sdp"
                android:background="@drawable/ico_hamburger_02"
                android:adjustViewBounds="true"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_20sdp"
                android:id="@+id/iv_topMenuOpenDrawer" />

            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="피아트헤어 고객 추가정보 입력" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01"
            />

    </LinearLayout>
    <include layout="@layout/view_main_drawer"></include>


</RelativeLayout>