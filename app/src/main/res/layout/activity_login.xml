<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.page.login.LoginActivity">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ph_page_bg_color"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"


                android:layout_width="@dimen/_20sdp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_back_02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"

                android:text="피아트헤어 로그인"
                android:textSize="@dimen/_30sdp" />


        </LinearLayout>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"

            android:text="로그인 방법을 선택해 주세요."
            android:textColor="@color/ph_gray_color_02" />


    </LinearLayout>




        <LinearLayout
            android:visibility="invisible"
            android:layout_below="@id/layout_top"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/layout_phoneLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"

            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_30sdp"

            android:background="@drawable/bg_button_rounded_default_01"
            android:elevation="@dimen/_10sdp"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/ph_gray_color_02"
            android:outlineSpotShadowColor="@color/ph_gray_color_02">

            <LinearLayout
                android:padding="@dimen/_20sdp"

                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center|left"

                    android:layout_marginBottom="@dimen/_14sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="@dimen/_4sdp"
                        android:src="@drawable/ico_phone_02"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/pretendard_bold"
                        android:text="휴대폰 번호 로그인"
                        android:textColor="@color/white" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"




                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="휴대폰 번호로\n로그인 하기"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ico_more_01"

                    android:id="@+id/iv_phoneLoginIcon"

                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:adjustViewBounds="true" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:visibility="invisible"
            android:layout_below="@id/layout_phoneLogin"
            android:id="@+id/layout_kakaoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_40sdp"

            android:background="@drawable/bg_button_kakao_rounded_default_01"
            android:elevation="@dimen/_10sdp"
            android:orientation="horizontal"
            android:outlineAmbientShadowColor="@color/ph_gray_color_02"
            android:outlineSpotShadowColor="@color/ph_gray_color_02">

            <LinearLayout
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_14sdp"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:src="@drawable/ico_kakao_small_01" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/pretendard_bold"
                        android:text="카카오 간편 로그인"
                        android:textColor="@color/ph_main_color" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:gravity="top|left"
                    android:lineSpacingExtra="@dimen/_4sdp"
                    android:text="카카오 계정으로\n로그인 하기"
                    android:textColor="@color/ph_main_color"
                    android:textSize="@dimen/_16sdp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_marginRight="@dimen/_5sdp"
                    android:src="@drawable/ico_more_01"

                    android:id="@+id/iv_kakaoLoginIcon"

                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:adjustViewBounds="true" />

            </LinearLayout>

        </LinearLayout>


    <LinearLayout
        android:translationZ="90dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/layout_loading"
        android:background="@color/black_80"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminateTint="@color/white"
            android:id="@+id/pb_finishLoading"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
    </LinearLayout>


</RelativeLayout>