<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_main_color"
    tools:context=".ui.page.login.LoginActivity">


    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ph_main_color"
        android:orientation="vertical"
        android:padding="@dimen/_20sdp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"


                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ico_back_01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:text="휴대폰 번호 로그인"

                    android:textColor="@color/white"
                    android:textSize="@dimen/_30sdp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"

                android:text="휴대폰 번호를 입력해 주세요."
                android:textColor="@color/white" />


        </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:gravity="center"
        android:visibility="visible"
        android:id="@+id/layout_phoneNumber"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top"
        android:layout_above="@id/layout_inputNumPad"

        android:orientation="vertical">


        <TextView
            android:textColorHint="@color/ph_gray_color_02"
            android:hint="010-0000-0000"
            android:id="@+id/tv_phoneNumber"
            android:gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:textSize="@dimen/_30sdp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:visibility="gone"
        android:id="@+id/layout_password"
        android:gravity="center"
        android:layout_below="@id/layout_top"
        android:layout_above="@id/layout_inputNumPad"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/iv_password_01"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/bg_password_round_default_01"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/iv_password_02"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/bg_password_round_default_01"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/iv_password_03"
                android:layout_marginRight="@dimen/_16sdp"
                android:src="@drawable/bg_password_round_default_01"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/iv_password_04"
                android:src="@drawable/bg_password_round_default_01"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>
        </LinearLayout>


    </LinearLayout>









    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/layout_inputNumPad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_numpad_rounded_01"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_numPad_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_2"
                android:layout_width="0dp"

                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_numPad_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_5"
                android:layout_width="0dp"

                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_numPad_7"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_8"
                android:layout_width="0dp"

                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <Button
                android:id="@+id/btn_numPad_9"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_numPad_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_cancel_02" />

            <Button
                android:id="@+id/btn_numPad_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_20sdp" />

            <ImageButton
                android:id="@+id/btn_numPad_delete"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_numpad_number_01"

                android:gravity="center"
                android:padding="@dimen/_6sdp"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_delete_01" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_numPadBack"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_rounded_02"
                android:text="뒤로"
                android:textColor="@color/ph_main_color"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1">

                <Button

                    android:id="@+id/btn_numPadInputFinish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/selector_button_rounded_01"
                    android:text="다음"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <ProgressBar

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:padding="@dimen/_10sdp"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:translationZ="90dp"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/layout_loading"
        android:background="@color/black_80"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:indeterminateTint="@color/white"
            android:id="@+id/pb_finishLoading"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"/>
    </LinearLayout>
</RelativeLayout>