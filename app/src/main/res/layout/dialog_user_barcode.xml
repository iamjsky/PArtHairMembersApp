<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:paddingTop="@dimen/_44sdp"
    android:paddingBottom="@dimen/_44sdp"
    android:paddingLeft="@dimen/_44sdp"
    android:paddingRight="@dimen/_44sdp">

    <LinearLayout
        android:padding="@dimen/_20sdp"
        android:background="@drawable/bg_rounded_01"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/iv_userBarcode"
                android:adjustViewBounds="true"
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_80sdp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/_6sdp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="center|bottom"
                    android:textColor="@color/ph_light_gray_color_01"
                    android:id="@+id/tv_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:gravity="center|bottom"
                    android:textColor="@color/ph_light_gray_color_01"
                    android:text="고객님"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:gravity="center|bottom"
                    android:textColor="@color/ph_light_gray_color_01"
                    android:text="회원번호"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text=""
                    android:textColor="@color/ph_light_gray_color_01"
                    android:id="@+id/tv_userBarcode_01"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text=""
                    android:textColor="@color/ph_light_gray_color_01"
                    android:id="@+id/tv_userBarcode_02"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text=""
                    android:textColor="@color/ph_light_gray_color_01"
                    android:id="@+id/tv_userBarcode_03"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:text=""
                    android:textColor="@color/ph_light_gray_color_01"
                    android:id="@+id/tv_userBarcode_04"
                    android:gravity="center|bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/btn_confirm"
            android:text="확인"
            android:background="@drawable/selector_button_rounded_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>

</RelativeLayout>