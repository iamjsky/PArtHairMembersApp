<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ph_page_bg_color"
    android:clipToPadding="false">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:clipToPadding="false"
            android:id="@+id/layout_styleItemContainer"
            android:paddingBottom="@dimen/_60sdp"
            android:paddingTop="@dimen/_60sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





    </androidx.core.widget.NestedScrollView>








    <LinearLayout
        android:id="@+id/layout_TopMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/ph_menu_tab_color_01"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_20sdp"

                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_20sdp"
                android:adjustViewBounds="true"
                android:src="@drawable/ico_back_02" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:text="헤어스타일, 시술 선택" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />

    </LinearLayout>











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:background="@color/ph_menu_tab_color_01"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/line_elevation_01" />
        <TextView
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/pretendard_bold"


            android:gravity="center"
            android:text="선택 목록"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">
            <LinearLayout
                android:id="@+id/layout_selectItemGroup"
                android:paddingLeft="@dimen/_10sdp"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">




            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingBottom="@dimen/_10sdp">


            <Button

                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:text="완료" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>