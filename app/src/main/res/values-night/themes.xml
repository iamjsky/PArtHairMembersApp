<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PArtHairMembersApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ph_main_color</item>
        <item name="colorPrimaryVariant">@color/ph_main_color</item>
        <item name="colorOnPrimary">@color/ph_page_bg_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ph_main_color</item>
        <item name="colorSecondaryVariant">@color/ph_main_color</item>
        <item name="colorOnSecondary">@color/ph_page_bg_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ph_page_bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!--custom font-family 적용-->
        <item name="android:textViewStyle">@style/customTextViewFontStyle</item>
        <item name="android:buttonStyle">@style/customButtonFontStyle</item>
        <item name="android:editTextStyle">@style/customEditTextFontStyle</item>
        <item name="android:radioButtonStyle">@style/customRadioButtonFontStyle</item>
        <item name="android:checkboxStyle">@style/customCheckboxFontStyle</item>
    </style>
</resources>